<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXRippler?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<fx:root xmlns:fx="http://javafx.com/fxml/1"
         xmlns="http://javafx.com/javafx/8.0.76-ea"
         type="StackPane"
         fx:id="root"
         fx:controller="SW9.controllers.ProjectPaneController"
         minWidth="300">

    <AnchorPane>

        <!-- Toolbar -->
        <AnchorPane fx:id="toolbar" minHeight="56" maxHeight="56"
                    AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

            <StackPane AnchorPane.leftAnchor="16" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">
                <Label fx:id="toolbarTitle"
                       styleClass="title"
                       text="Project"/>
            </StackPane>

            <HBox AnchorPane.rightAnchor="48" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">
                <!-- CREATE SYSTEM -->
                <JFXRippler fx:id="createSystem">
                    <StackPane minWidth="40" maxHeight="40" onMouseClicked="#createSystemClicked">
                        <StackPane fx:id="createSystemPane" minWidth="14" maxWidth="14" minHeight="20" maxHeight="20">
                            <ImageView fx:id="createSystemImage" />
                        </StackPane>
                    </StackPane>
                </JFXRippler>
            </HBox>

            <HBox AnchorPane.rightAnchor="8" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">
                <!-- CREATE COMPONENT -->
                <JFXRippler fx:id="createComponent">
                    <StackPane minWidth="40" maxHeight="40" onMouseClicked="#createComponentClicked">
                        <StackPane fx:id="createComponentPane" minWidth="14" maxWidth="14" minHeight="20" maxHeight="20">
                            <ImageView fx:id="createComponentImage" />
                        </StackPane>
                    </StackPane>
                </JFXRippler>
            </HBox>

        </AnchorPane>

        <ScrollPane fx:id="scrollPane"
                    fitToHeight="true" fitToWidth="true"
                    AnchorPane.topAnchor="56"
                    AnchorPane.bottomAnchor="0"
                    AnchorPane.leftAnchor="0"
                    AnchorPane.rightAnchor="0"
                    styleClass="edge-to-edge" >

            <VBox fx:id="filesList">
                <!-- Files goes here -->
            </VBox>

        </ScrollPane>

    </AnchorPane>
</fx:root>